<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <github.pnikosis.progresswheel.ProgressWheel
        android:id="@+id/pw"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        app:matProg_barColor="#FF5722"
        app:matProg_barSpinCycleTime="500"
        app:matProg_barWidth="5dip"
        app:matProg_circleRadius="40dip"
        app:matProg_fillRadius="true"
        app:matProg_linearProgress="true"

        app:matProg_progressIndeterminate="true"
        app:matProg_rimColor="#CFD8DC"
        app:matProg_rimWidth="3dip"
        app:matProg_spinSpeed="1.0"/>

</RelativeLayout>